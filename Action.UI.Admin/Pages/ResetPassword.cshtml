<body data-col="1-column" class=" 1-column  blank-page blank-page">
    <!-- ////////////////////////////////////////////////////////////////////////////-->
    <div class="wrapper nav-collapsed menu-collapsed">
        <div class="main-panel">
            <div class="main-content">
                <div class="content-wrapper">
                    <!--Login Page Starts-->
                    <section id="login">
                        <div class="container-fluid">
                            <div class="row full-height-vh">
                                <div class="col-12 d-flex align-items-center justify-content-center">
                                    <div class="card gradient-indigo-purple text-center width-400">
                                        <div class="card-img overlap">
                                            <img alt="element 06" class="mb-1" src="~/app-assets/img/logos/logo_action.png" width="190">
                                        </div>
                                        <div class="card-body">
                                            <div class="card-block">

                                                @if (Model.ShowFormChangePassword)
                                                {
                                                    <h4 class="white">@Model.UserLogin.Email</h4>
                                                    <form method="post" id="formResetPassword">
                                                        <input type="hidden" asp-for="@Model.UserLogin.Email" />
                                                        <div class="form-group">
                                                            <div class="col-md-12">
                                                                <input type="password" class="form-control" asp-for="@Model.UserLogin.Password" id="inputPass" placeholder="Senha" required>
                                                            </div>
                                                        </div>

                                                        <div class="form-group">
                                                            <div class="col-md-12">
                                                                <input type="password" class="form-control" asp-for="@Model.UserLogin.ConfirmPassword" id="inputConfirmPass" placeholder="Confirmaçã Senha" required>
                                                            </div>
                                                        </div>

                                                        <div class="form-group">
                                                            <div class="col-md-12">
                                                                <button type="button" class="btn btn-pink btn-block btn-raised" id="btnAlterarSenha">Alterar Senha</button>

                                                            </div>
                                                        </div>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <div class="alert alert-danger" role="alert">
                                                        Não existe solicitação de troca de senha para este login.
                                                    </div>

                                                }
                                            </div>

                                        </div>
                                        <div class="card-footer">
                                            @if (!Model.ShowFormChangePassword)
                                            {
                                                <div class="float-left"><a href="/Login" class="white">Voltar para página de login</a></div>

                                            }
                                            @*<div class="float-right"><a (click)="onRegister()" class="white">New User?</a></div>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!--Login Page Ends-->
                </div>
            </div>
        </div>
    </div>
    <!-- ////////////////////////////////////////////////////////////////////////////-->
    <!-- BEGIN VENDOR JS-->
    <script src="~/app-assets/vendors/js/core/jquery-3.2.1.min.js" type="text/javascript"></script>
