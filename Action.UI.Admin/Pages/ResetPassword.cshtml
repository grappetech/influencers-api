    <!-- END PAGE LEVEL JS-->

    <script src="~/js/site.js" asp-append-version="true" type="text/javascript"></script>
    <script>
        $(document).ready(function () {


            $('#btnAlterarSenha').on('click', function (e) {

                var form = $('form').serializeFormJSON();

                //validar
                //Site.utils.isStrongPassword("M@rc10j0s3ff")
                var errors = [];

                var pass = $('#inputPass').val();
                var confirmPass = $('#inputConfirmPass').val();

                if (pass != confirmPass) {
                    errors.push('As senhas digitadas são divergentes');
                }

                if (!Site.utils.isStrongPassword(pass)) {
                    errors.push('A senha deve conter ao menos:<br>1 Número<br>1 letra maiúscula<br>1 letra minúscula<br>1 caracter especial como (@@ # $ .)<br>ter no mínimo 8 caracteres</li></ul>');
                }

                if (errors.length > 0) {

                    Site.notification.error(errors.join("<br>"));

                    return;

                }


                Site.ajax.post('ResetPassword', form, resetPasswordResult);

                function resetPasswordResult(data) {
                    
                    if (data) {

                        data = JSON.parse(data);

                        if (data.status) {
                            Site.notification.success(data.message, function () {

                                window.location.href = "Login";
                            });
                        } else {
                            Site.notification.error(data.message);

                        }

                    } else {

                        Site.notification.error("Não é possível concluir a operação.");
                    }

                }

            });


        });
    </script>
</body>
</html>