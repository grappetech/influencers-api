@page
@model ListModel
@{
    ViewData["Title"] = "Lista de entidades";
}



@section css{
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/datatable/datatables.min.css">
}
@section scripts{
    <script src="~/app-assets/vendors/js/datatable/datatables.min.js" type="text/javascript"></script>
    <script src="~/js/Admin/DataTableConfig.js" type="text/javascript"></script>

}
    <section id="simple-table">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Entidades</h4>
                        <!-- <p>For basic styling add the base class <code>.table</code> to any <code>&lt;table&gt;</code>. It may seem super redundant, but given the widespread use of tables for other plugins like calendars and date pickers, we've opted to isolate our custom table styles.</p> -->
                    </div>
                    <div class="card-body">
                        <div class="card-block">

                            <div class="form-actions">
                            
                                <a  href="/Entities/Register/0" class="btn btn-raised btn-raised btn-primary">
                                    <i class="fa fa-plus"></i> Add Entidade
                                </a>
                            </div>
                            <table class="table data-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Nome</th>
                                        <th>Alias</th>
                                        <th>Tipo</th>
                                        <th>
                                            Qtd.
                                            <br>Entidades Watson
                                        </th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var entity in Model.WattsonEntities)
                                    {
                                        <tr>
                                            <th scope="row">@entity.Id</th>
                                            <td>@entity.Name</td>
                                            <td>@entity.Alias</td>
                                            <td>mdo</td>
                                            <td>@entity?.RelatedEntities.Count</td>
                                            <td>
                                                <a class="success p-0" data-original-title="" title="" href="/Logged/Entities/Register/@entity.Id">
                                                    <i class="ft-edit-2 font-medium-3 mr-2"></i>
                                                </a>

                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>